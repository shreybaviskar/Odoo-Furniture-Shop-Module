<odoo>
    <data noupdate="1">
        <record id="module_category_furniture_shop" model="ir.module.category">
            <field name="name">Furniture Shop</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_furniture_salesperson" model="res.groups">
            <field name="name">Salesperson</field>
            <field name="category_id" ref="module_category_furniture_shop"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_furniture_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_furniture_shop"/>
            <field name="implied_ids" eval="[(4, ref('group_furniture_salesperson'))]"/>
        </record>

        <record id="group_furniture_owner" model="res.groups">
            <field name="name">Owner</field>
            <field name="category_id" ref="module_category_furniture_shop"/>
            <field name="implied_ids" eval="[(4, ref('group_furniture_manager'))]"/>
        </record>
    </data>
</odoo>